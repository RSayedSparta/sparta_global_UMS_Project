@if (Session["email"] != null)
{
    using (Html.BeginForm("Logout", "Login", FormMethod.Post, new { @class = "navbar-right" }))
    {
        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink(" Welcome " + Session["email"] + "!", "Details", "Users", Session.SessionID, new { @class = "glyphicon glyphicon-user" })</li>
            <li>@Html.ActionLink("Log out", "Logout", "Login")</li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Login", "Login", "Login")</li>
        <li>@Html.ActionLink("Register", "Create", "Users")</li>
    </ul>
}
